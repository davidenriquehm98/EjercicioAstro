---
interface Props {
  id: string
  img: string
  success: boolean
  flightNumber: number
  details: string | null
}
const { success, flightNumber, img, id, details } = Astro.props
const successText = success ? 'Ã‰xito' : 'Fracaso'
---
<div
  class="rounded-lg border shadow-md bg-gray-800 border-gray-700 hover:scale-105 hover:bg-gray-700 hover:border-gray-500 transition flex "
>
  <div class="flex h-full w-1/3 items-center justify-center" >
    <picture class="flex justify-center p-4">
      <img class="mb-5 rounded-lg" src={img} alt={`Patch for launch ${id}`}>
    </picture>
  </div>
  <aside class="p-4 w-2/3">
    <span
      class:list={[
        'text-xs font-semibold mr-2 px-2.5 py-0.5 rounded',
        {
          'bg-green-200 text-green-900': success,
          'bg-red-200 text-red-900': !success,
        }
      ]}
    >
      {successText}
    </span>
    <h2 class="my-2 text-2xl font-bold tracking-tight text-white">
      Flight #{flightNumber}
    </h2>
    <p class=" mb-2 font-light text-gray-400 line-clamp-[8] " >
      {/* line-clamp puede reemplazar el cortar texto con .slice(100) */}
      {details}
    </p>
  </aside>
</div>