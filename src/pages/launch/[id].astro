---
import Layout from '../../layouts/Layout.astro';
import { getLaunchById, getLaunchesIds } from '../../services/spacex'
import HorizontalCardLaunch from '../../components/HorizontalCardLaunch.astro'
const { id } = Astro.params
let launch
if (id) {
  launch = await getLaunchById({ id })
}

export const prerender = false
// export async function getStaticPaths () {
//   return await getLaunchesIds()
// }
---
<Layout title={`Lanzamiento ${id}`} >
  {launch &&
    <HorizontalCardLaunch
      id={launch.id}
      flightNumber={launch.flight_number}
      img={launch.links.patch.small}
      details={launch.details}
      success={launch.success} />
  }
</Layout>